<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/VerticalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="672dp"
        android:background="#f8f8f8"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/addTravelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/BottomLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecommendLayout"
        app:srcCompat="@drawable/ic_rectangle_10"
        tools:background="?android:attr/panelBackground" />

    <LinearLayout
        android:id="@+id/RecommendLayout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextLayout"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <Button
                android:id="@+id/City1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:text="Button" />

            <TextView
                android:id="@+id/City1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textAlignment="center"
                android:textColor="#242b33"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <Button
                android:id="@+id/City2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:text="Button" />

            <TextView
                android:id="@+id/City2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textAlignment="center"
                android:textColor="#242b33"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <Button
                android:id="@+id/City3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:text="Button" />

            <TextView
                android:id="@+id/City3_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textAlignment="center"
                android:textColor="#242b33"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <Button
                android:id="@+id/City4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:text="Button" />

            <TextView
                android:id="@+id/City4_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textAlignment="center"
                android:textColor="#242b33"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <Button
                android:id="@+id/City5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:text="Button" />

            <TextView
                android:id="@+id/City5_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textAlignment="center"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TextLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="117dp">

        <TextView
            android:id="@+id/recommended"
            android:layout_width="match_parent"
            android:layout_height="15.5dp"
            android:paddingLeft="10dp"
            android:text="추천 여행지"
            android:textColor="#242b33"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BottomLayout"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:backgroundTint="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/TravelLayout"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/ic_on_2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_gravity="center_horizontal"
                android:text="여행"
                android:textAlignment="center"
                android:textColor="#f16461"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ThemaLayout"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/ic_off_2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="테마"
                android:textAlignment="center"
                android:textColor="#9b9b9b"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MatchingLayout"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/ic_off_3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="매칭"
                android:textAlignment="center"
                android:textColor="#9b9b9b"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SettingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/ic_off_4" />

            <TextView
                android:id="@+id/cityText"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="설정"
                android:textAlignment="center"
                android:textColor="#9b9b9b"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>